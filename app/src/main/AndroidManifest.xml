        android:theme="@style/Theme.Tracker">
        <activity android:name=".Achievements"

            android:windowSoftInputMode="adjustPan"
            />
        <activity android:name=".PlayGame"

            android:windowSoftInputMode="adjustPan"
            />
        <activity android:name=".Before_Game"

            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".EditCollection"

            android:windowSoftInputMode="adjustPan"
             />
